			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="Flow-ref to sf-address-persistance-aux-insert" doc:id="d298a06c-59d6-4453-a7f7-7e32176a4c5c" name="sf-address-persistance-aux-insert"/>
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-that doc:name="Assert that" doc:id="b0f7e73a-63e0-4d58-b878-7f6be6c0cf94" expression="#[vars.vAuxInsertQuery]" is="#[MunitTools::notNullValue()]"/>
		</munit:validation>
	</munit:test>


</mule>
