<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:salesforce="http://www.mulesoft.org/schema/mule/salesforce"
	xmlns:os="http://www.mulesoft.org/schema/mule/os"
	xmlns:db="http://www.mulesoft.org/schema/mule/db" xmlns:apikit="http://www.mulesoft.org/schema/mule/mule-apikit"
	xmlns:http="http://www.mulesoft.org/schema/mule/http"
	xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="
http://www.mulesoft.org/schema/mule/db http://www.mulesoft.org/schema/mule/db/current/mule-db.xsd 
http://www.mulesoft.org/schema/mule/mule-apikit http://www.mulesoft.org/schema/mule/mule-apikit/current/mule-apikit.xsd 
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/os http://www.mulesoft.org/schema/mule/os/current/mule-os.xsd
http://www.mulesoft.org/schema/mule/salesforce http://www.mulesoft.org/schema/mule/salesforce/current/mule-salesforce.xsd">
	<apikit:config name="pstosfdc-api-config" api="usecase-1-papi.raml"
		outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus"
		raml="api/usecase-1-papi.raml" doc:description="Process router config."/>
	<configuration-properties doc:name="Configuration properties"
		doc:id="757e81af-1f55-4f83-a243-2777057b2ada" file="properties\chapman-pstosfdc-papi-${mule.env}.yaml" doc:description="Dynamic properties."/>

	<http:listener-config name="pstosfdc-http-listener-config" doc:description="Process listener config.">
		<http:listener-connection host="${http.listener.host}"
			port="${http.listener.port}" />
	</http:listener-config>
	<http:request-config name="sfdc-system-http-request-config"
		doc:name="HTTP Request configuration" doc:id="4bc0f721-0f9c-4864-ab42-de756db99902" basePath="${http.request.system.sfdc.basePath}" doc:description="SFDC system config." responseTimeout="600000">
		<http:request-connection host="${http.request.system.sfdc.host}"
			port="${http.request.system.sfdc.port}" />
	</http:request-config>
	<http:request-config name="persistence-system-http-request-config"
		doc:name="HTTP Request configuration" doc:id="92931d4e-a3bc-4494-a92d-6026fc3e84e1" basePath="${http.request.system.persistence.basePath}" doc:description="Persistence system config.">
		<http:request-connection host="${http.request.system.persistence.host}" port="${http.request.system.persistence.port}" />
	</http:request-config>

	<salesforce:sfdc-config name="salesforce-config" doc:name="Salesforce Config" doc:id="499d0094-aba3-4617-a348-cac6c532ca24" >
		<salesforce:basic-connection username="${system.salesforce.user}" password="${system.salesforce.password}" url="${system.salesforce.authorizationUrl}" />
	</salesforce:sfdc-config>
	<db:config name="rpt-db-config" doc:name="Database Config"
		doc:id="0ba8d50c-2dab-4509-af2a-f12d96b7dc45" doc:description="RPT Database config (PS)">
		<db:oracle-connection host="${db.rpt.host}"
			user="${db.rpt.user}" password="${db.rpt.password}" serviceName="${db.rpt.serviceName}" port="${db.rpt.port}"/>
	</db:config>
	<db:config name="aux-db-config" doc:name="Database Config"
		doc:id="434ed2cb-2b06-4256-8771-f72e90457b52" doc:description="AUX Database config (Aux)">
		<db:oracle-connection host="${db.aux.host}"
			user="${db.aux.user}" password="${db.aux.password}" serviceName="${db.aux.serviceName}" port="${db.aux.port}"/>
	</db:config>
	<os:object-store name="Object_store" doc:name="Object store" doc:id="5cbcbdb7-9b80-4c48-a66b-bd7b72c637a5" entryTtl="30" entryTtlUnit="DAYS" />
	
	

</mule>
